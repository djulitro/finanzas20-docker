# Project Name (from .env.project)
PROJECT_NAME=

# Ports Configuration
PORT_BACKEND=8081
PORT_BACKEND_SSL=4431
PORT_FRONTEND=3001
PORT_MYSQL=3307
PORT_REDIS=6380
PORT_PHPMYADMIN=8082

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=${PROJECT_NAME}_name
DB_USERNAME=${PROJECT_NAME}_user
DB_PASSWORD=${PROJECT_NAME}_password

# App Configuration
APP_NAME=${PROJECT_NAME}
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8081

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (configure later)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Cache Configuration
CACHE_DRIVER=redis

# Queue Configuration
QUEUE_CONNECTION=redis

